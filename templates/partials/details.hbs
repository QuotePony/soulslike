<section class="sl-panel">
  <div class="sl-panel-title">Lore & Ties</div>
  <div class="sl-field-grid two">
    <label class="sl-field">
      <span class="sl-label">Calling</span>
      <input class="sl-input" type="text" name="system.calling" value="{{system.calling}}" placeholder="Warden of the Ash" />
    </label>
    <label class="sl-field">
      <span class="sl-label">Oath</span>
      <input class="sl-input" type="text" name="system.oath" value="{{system.oath}}" placeholder="Guard the shrinefire" />
    </label>
  </div>
  <label class="sl-field full">
    <span class="sl-label">Background</span>
    <textarea class="sl-input sl-textarea" name="system.background" rows="4" placeholder="Whispers, scars, and tales of hollow victories.">{{system.background}}</textarea>
  </label>
  <label class="sl-field full">
    <span class="sl-label">Allies & Foes</span>
    <textarea class="sl-input sl-textarea" name="system.connections" rows="3" placeholder="Allies, rivals, debts unpaid.">{{system.connections}}</textarea>
  </label>
</section>
